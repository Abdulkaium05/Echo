
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =====================================================
    // Helper functions
    // =====================================================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isChatParticipant(chatId) {
      return isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
    }
    
    function isDevTeam() {
      // Use exists() for safety in case the user document is in the process of being created.
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isDevTeam == true;
    }
    
    function isGiftingPoints() {
      return request.resource.data.diff(resource.data).affectedKeys().hasAll(['points', 'hasNewPointsGift', 'pointsGifterUid', 'lastGiftedPointsAmount'])
             && request.resource.data.hasNewPointsGift == true
             && request.resource.data.points > resource.data.points;
    }
    
    function isSpendingPoints() {
        // Allow updating points only if the new value is less than the old one.
        return request.resource.data.points < resource.data.points;
    }
    
    function isGiftingBadge() {
       return isDevTeam() && request.resource.data.diff(resource.data).hasAny([
          'isVerified', 'isCreator', 'isVIP', 'isMemeCreator', 'isBetaTester', 'badgeExpiry', 
          'hasNewGift', 'giftedByUid', 'lastGiftedBadge'
        ]);
    }
    
    function isUpdatingLastSeen() {
        return request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastSeen']);
    }

    function isClearingExpiredVip() {
      // A user can clear their own expired VIP status.
      // This is safe because they can only go from true to false.
      return resource.data.isVIP == true && request.resource.data.isVIP == false;
    }
    
    function isClearingGiftNotification() {
      return request.resource.data.diff(resource.data).affectedKeys().hasAny([
        'hasNewGift', 'giftedByUid', 'lastGiftedBadge',
        'hasNewPointsGift', 'pointsGifterUid', 'lastGiftedPointsAmount'
      ]);
    }
    
    function isUpdatingOwnProfileSafely() {
      // User can change their own profile, BUT cannot change protected fields.
      // This is a "deny list" approach.
      return isOwner(userId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny([
        'isVerified', 'isCreator', 'isDevTeam', 'isBot', 'points', 'isVIP',
        'isMemeCreator', 'isBetaTester'
      ]);
    }

    // =====================================================
    // Users Collection
    // =====================================================
    match /users/{userId} {
      allow read: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if request.auth.uid == userId;
      
      // Allow updates by the owner or for specific gift-related actions.
      allow update: if 
            // Case 1: A user is updating their own profile (name, avatar, badgeOrder, etc).
            isUpdatingOwnProfileSafely()
            ||
            // Case 2: The owner is spending points (e.g., buying VIP).
            (isOwner(userId) && isSpendingPoints())
            ||
            // Case 3: The owner is updating their online status
            (isOwner(userId) && isUpdatingLastSeen())
            ||
            // Case 4: Owner is clearing gift notifications after viewing them.
            (isOwner(userId) && isClearingGiftNotification())
            ||
            // Case 5: Another user is gifting points to this user.
            (isSignedIn() && isGiftingPoints())
            ||
            // Case 6: A dev team member is gifting a badge.
            (isGiftingBadge())
            ||
            // Case 7: The user's own VIP plan has expired, and the app is clearing it.
            (isOwner(userId) && isClearingExpiredVip());

      // Gift History Subcollection
      match /gifts/{giftId} {
        allow read, list: if isOwner(userId);
        allow create: if isSignedIn() && request.resource.data.senderId == request.auth.uid;
      }
    }

    // =====================================================
    // Chats Collection
    // =====================================================
    match /chats/{chatId} {
      allow get: if isChatParticipant(chatId);
      allow list: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
      allow update: if isChatParticipant(chatId);

      match /messages/{messageId} {
        allow read: if isChatParticipant(chatId);
        allow create: if isChatParticipant(chatId) && request.resource.data.senderId == request.auth.uid;
        allow update, delete: if isChatParticipant(chatId) && resource.data.senderId == request.auth.uid;
      }
    }

    // =====================================================
    // Promo Codes and Gift Codes
    // =====================================================
    // Any signed-in user can read a code to check its validity.
    // Any signed-in user can update the 'claimedBy' field to redeem it. No other fields can be changed.
    // Only Dev Team can create or delete codes.
    match /vipPromoCodes/{code} { 
      allow read: if isSignedIn();
      allow update: if isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['claimedBy']);
      allow create, delete: if isDevTeam();
    }
    match /pointsPromoCodes/{code} { 
      allow read: if isSignedIn();
      allow update: if isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['claimedBy']);
      allow create, delete: if isDevTeam();
    }
    match /badgeGiftCodes/{code} { 
      allow read: if isSignedIn();
      allow update: if isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['claimedBy']);
      allow create, delete: if isDevTeam();
    }
    
    // Deny all other access
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
