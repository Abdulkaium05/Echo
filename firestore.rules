
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =====================================================
    // Helper functions
    // =====================================================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isChatParticipant(chatId) {
      return isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
    }
    
    function isDevTeam() {
      // Use exists() for safety in case the user document is in the process of being created.
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isDevTeam == true;
    }
    
    function isBot() {
      // The bot sends messages from the server, so it has no auth object.
      // We identify it by checking for a specific UID in the message data.
      return request.resource.data.lastMessage.senderId == 'blue_bird_ai_uid';
    }

    // =====================================================
    // Users Collection
    // =====================================================
    match /users/{userId} {
      allow read: if isSignedIn() || isDevTeam(); 
      allow list: if isSignedIn();
      allow create: if request.auth.uid == userId;
      
      allow update: if 
        // A user can update their own profile with safe fields.
        (isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly([
            'name', 'avatarUrl', 'badgeOrder', 'lastSeen', 'hasCompletedOnboarding', 
            'chatColorPreferences', 'hasNewGift', 'giftedByUid', 'lastGiftedBadge', 
            'hasNewPointsGift', 'pointsGifterUid', 'lastGiftedPointsAmount', 'points', 'isVIP',
            'vipPack', 'vipExpiryTimestamp', 'starGems', 'isCreatorLv2', 'isPatron',
            'isPioneer', 'isMemeCreatorLv2', 'isBetaTesterLv2'
        ]))
        ||
        // Another user can gift points or badges.
        (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasAny([
            'points', 'hasNewPointsGift', 'pointsGifterUid', 'lastGiftedPointsAmount',
            'isVerified', 'isCreator', 'isVIP', 'isMemeCreator', 'isBetaTester', 'badgeExpiry', 
            'hasNewGift', 'giftedByUid', 'lastGiftedBadge'
        ]));

      // Gift History Subcollection
      match /gifts/{giftId} {
        allow read, list: if isOwner(userId);
        allow create: if isSignedIn() && request.resource.data.senderId == request.auth.uid;
      }
    }

    // =====================================================
    // Chats Collection
    // =====================================================
    match /chats/{chatId} {
      allow get: if isChatParticipant(chatId);
      allow list: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
      allow update: if isChatParticipant(chatId) || isBot(); // Allow bot to update lastMessage

      match /messages/{messageId} {
        allow read: if isChatParticipant(chatId);
        // Allow create if user is a participant OR if it's the bot sending a message
        allow create: if (isChatParticipant(chatId) && request.resource.data.senderId == request.auth.uid) || request.resource.data.senderId == 'blue_bird_ai_uid';
        allow update, delete: if isChatParticipant(chatId) && resource.data.senderId == request.auth.uid;
      }
    }
    
    // =====================================================
    // Feature Suggestions Collection
    // =====================================================
    match /feature_suggestions/{suggestionId} {
      // Any signed-in user can submit an idea.
      allow create: if isSignedIn();
      // Only the dev team can view, approve, or delete suggestions.
      allow read, update, delete: if isDevTeam();
    }

    // =====================================================
    // Promo Codes and Gift Codes
    // =====================================================
    // Any signed-in user can read a code to check its validity.
    // Any signed-in user can update the 'claimedBy' field to redeem it. No other fields can be changed.
    // Only Dev Team can create or delete codes.
    match /vipPromoCodes/{code} { 
      allow read: if isSignedIn();
      allow update: if isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['claimedBy']);
      allow create, delete: if isDevTeam();
    }
    match /pointsPromoCodes/{code} { 
      allow read: if isSignedIn();
      allow update: if isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['claimedBy']);
      allow create, delete: if isDevTeam();
    }
    match /badgeGiftCodes/{code} { 
      allow read: if isSignedIn();
      allow update: if isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['claimedBy']);
      allow create, delete: if isDevTeam();
    }
    
    // Deny all other access
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
