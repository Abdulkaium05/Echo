
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Avatars: Allow users to read anyone's avatar, but only write to their own.
    // The uploaded file must be an image and smaller than 2MB.
    match /avatars/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 2 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Deny all other writes to storage
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
