
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =====================================================
    // Helper functions
    // =====================================================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isChatParticipant(chatId) {
      return isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
    }
    
    function isDevTeam() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isDevTeam == true;
    }

    // =====================================================
    // Users Collection
    // =====================================================
    match /users/{userId} {
      allow read: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if request.auth.uid == userId;
      // Allow updates by owner, but prevent them from changing their own special roles or points.
      allow update: if isOwner(userId)
                    && !(request.resource.data.diff(resource.data).affectedKeys().hasAny([
                      'isVIP', 'isVerified', 'isCreator', 'isDevTeam', 'isBot', 'points',
                      'hasNewGift', 'giftedByUid', 'lastGiftedBadge',
                      'hasNewPointsGift', 'pointsGifterUid', 'lastGiftedPointsAmount'
                    ]));
    }

    // =====================================================
    // Chats Collection
    // =====================================================
    match /chats/{chatId} {
      // Allow a user to get a single chat document if they are a participant.
      allow get: if isChatParticipant(chatId);
      
      // Securely allow querying the chat list.
      // The app MUST use `where('participants', 'array-contains', request.auth.uid)` in its query.
      allow list: if isSignedIn();
      
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
      allow update: if isChatParticipant(chatId);

      // Messages subcollection
      match /messages/{messageId} {
        // Allow reading/listing messages if the user is a participant of the parent chat.
        // This is the key rule that fixes the message loading permission error.
        allow read: if isChatParticipant(chatId);
        
        allow create: if isChatParticipant(chatId) && request.resource.data.senderId == request.auth.uid;
        
        // Allow a user to update/delete their own sent messages (e.g., for reactions or soft-deletes).
        allow update: if isChatParticipant(chatId)
                      && resource.data.senderId == request.auth.uid;
      }
    }

    // =====================================================
    // Promo Codes and Gift Codes (Writeable only by Devs)
    // =====================================================
    match /vipPromoCodes/{code} { 
      allow read: if isSignedIn(); 
      allow write: if isDevTeam();
    }
    match /pointsPromoCodes/{code} { 
      allow read: if isSignedIn(); 
      allow write: if isDevTeam();
    }
    match /badgeGiftCodes/{code} { 
      allow read: if isSignedIn(); 
      allow write: if isDevTeam();
    }
    
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
