
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =====================================================
    // Helper functions
    // =====================================================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isChatParticipant(chatId) {
      return isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
    }
    
    function isDevTeam() {
      // Use exists() for safety in case the user document is in the process of being created.
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isDevTeam == true;
    }

    // =====================================================
    // Users Collection
    // =====================================================
    match /users/{userId} {
      allow read: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if request.auth.uid == userId;
      
      // Allow updates by owner or by a dev team member for gifting.
      allow update: if isOwner(userId) && (
        // Allow a non-VIP user to become VIP (i.e., purchase a plan).
        (!resource.data.isVIP && request.resource.data.isVIP == true)
        ||
        // Prevent users from changing their own special roles or points balance.
        !(request.resource.data.diff(resource.data).affectedKeys().hasAny([
          'isVerified', 'isCreator', 'isDevTeam', 'isBot', 'points',
          'isMemeCreator', 'isBetaTester', 'badgeExpiry', 'hasNewGift', 'giftedByUid', 'lastGiftedBadge',
          'hasNewPointsGift', 'pointsGifterUid', 'lastGiftedPointsAmount'
        ]))
      ) || (
        // Allow a dev team member to gift badges and related properties.
        isDevTeam() && request.resource.data.diff(resource.data).affectedKeys().hasAny([
          'isVerified', 'isCreator', 'isVIP', 'isMemeCreator', 'isBetaTester', 'badgeExpiry', 
          'hasNewGift', 'giftedByUid', 'lastGiftedBadge'
        ])
      );
    }

    // =====================================================
    // Chats Collection
    // =====================================================
    match /chats/{chatId} {
      allow get: if isChatParticipant(chatId);
      allow list: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
      allow update: if isChatParticipant(chatId);

      match /messages/{messageId} {
        allow read: if isChatParticipant(chatId);
        allow create: if isChatParticipant(chatId) && request.resource.data.senderId == request.auth.uid;
        allow update, delete: if isChatParticipant(chatId) && resource.data.senderId == request.auth.uid;
      }
    }

    // =====================================================
    // Promo Codes and Gift Codes
    // =====================================================
    // Any signed-in user can read a code to check its validity.
    // Any signed-in user can update the 'claimedBy' field to redeem it. No other fields can be changed.
    // Only Dev Team can create or delete codes.
    match /vipPromoCodes/{code} { 
      allow read: if isSignedIn();
      allow update: if isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['claimedBy']);
      allow create, delete: if isDevTeam();
    }
    match /pointsPromoCodes/{code} { 
      allow read: if isSignedIn();
      allow update: if isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['claimedBy']);
      allow create, delete: if isDevTeam();
    }
    match /badgeGiftCodes/{code} { 
      allow read: if isSignedIn();
      allow update: if isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['claimedBy']);
      allow create, delete: if isDevTeam();
    }
    
    // Deny all other access
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
